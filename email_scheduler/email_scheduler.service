[Unit]
Description=Email users when art is done.
Requires=network.target
[Service]
#Environment=ARTBOT_CONF=/root/artbot.conf
WorkingDirectory=/home/artbot/artbot_venv
ExecStart=/home/artbot/artbot_venv/bin/python /home/artbot/email_scheduler/email_scheduler.py
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
Restart=on-failure
User=root
Group=root